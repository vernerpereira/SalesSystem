@model SalesSystem.MVC.ViewModels.ProductViewModel
@using SalesSystem.Common.Resources
@{
    ViewBag.Title = Fields.Product;
}

<h2>@Fields.Details</h2>

<div>
    <h4>@Fields.Product</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            R$ @Model.Price
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink(Fields.Edit, "Edit", new { parameter = Model.Id }, new {@class="btn btn-primary"}) |
    @Html.ActionLink(Fields.BackToList, "Index", null, new {@class="btn btn-default"})
</p>
