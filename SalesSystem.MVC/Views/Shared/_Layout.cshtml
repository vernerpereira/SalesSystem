@using SalesSystem.Common.Resources
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sales System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Sales System", "Index", "Sale", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(Fields.Sales, "Index", "Sale")</li>
                    <li>@Html.ActionLink(Fields.Products, "Index", "Product")</li>
                    <li>@Html.ActionLink(Fields.Customers, "Index", "Customer")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year Developed by Verner Estevam Pereira</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/masks")
    @Scripts.Render("~/bundles/bootstrap")
	@Scripts.Render("~/bundles/init")
    @RenderSection("scripts", required: false)
</body>
</html>
